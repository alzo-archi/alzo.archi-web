---
import architectureWebsites from '../data/architecture-websites.json';
---

<section class="bg-[#DCF0FF] text-[#0085C8] p-4 md:p-10 overflow-hidden relative">
    <div class="relative mx-auto w-full max-w-[1440px]">
        <h3 class="text-center text-md md:text-2xl mb-4 md:mb-8">
            Quelques autres sites d'agences d'architecture<br/>et bureaux d'études réalisés avant Alzo :
        </h3>

        <div class="relative">
            <div
                class="absolute -left-10 z-10 top-0 bottom-0 w-20 md:w-60"
                style="background: linear-gradient(to right, #DCF0FF 0%, rgba(0,0,0,0) 100%)"
            >
            </div>
            <div
                class="absolute -right-10 z-10 top-0 bottom-0 w-20 md:w-60"
                style="background: linear-gradient(to left, #DCF0FF 0%, rgba(0,0,0,0) 100%)"
            >
            </div>

            <div
                class="relative flex px-10 -mx-10 overflow-x-scroll overflow-y-visible py-4 md:py-10 gap-4 md:gap-8"
            >
                {architectureWebsites.map((site) => (
                    <div class="shrink-0" style="flex: 0 0 350px">
                        <div class="browser-window">
                            <div class="browser-header">
                                <div class="browser-buttons">
                                    <span class="browser-btn close"></span>
                                    <span class="browser-btn minimize"></span>
                                    <span class="browser-btn maximize"></span>
                                </div>
                                <div class="browser-url">{site.url}</div>
                            </div>
                            <div class="browser-content">
                                <img
                                    src={site.screenshot}
                                    alt={site.name}
                                    class="screenshot-image"
                                />
                            </div>
                        </div>
                        <div class="site-info mt-3 text-center">
                            <h4 class="font-medium text-sm md:text-base mb-1">{site.name}</h4>
                            <p class="text-xs md:text-sm opacity-80">{site.description}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<style>
    .browser-window {
        background: #fff;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease;
    }

    .browser-window:hover {
        transform: translateY(-4px);
    }

    .browser-header {
        background: #f6f6f6;
        border-bottom: 1px solid #d4d4d4;
        padding: 4px 6px;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    @media (min-width: 768px) {
        .browser-header {
            padding: 5px 7px;
            gap: 6px;
        }
    }

    .browser-buttons {
        display: flex;
        gap: 3px;
    }

    @media (min-width: 768px) {
        .browser-buttons {
            gap: 4px;
        }
    }

    .browser-btn {
        width: 7px;
        height: 7px;
        border-radius: 50%;
        display: inline-block;
    }

    @media (min-width: 768px) {
        .browser-btn {
            width: 8px;
            height: 8px;
        }
    }

    .browser-btn.close {
        background: #ff5f57;
    }

    .browser-btn.minimize {
        background: #ffbd2e;
    }

    .browser-btn.maximize {
        background: #28ca42;
    }

    .browser-url {
        flex: 1;
        background: white;
        border: 1px solid #d4d4d4;
        border-radius: 2px;
        padding: 1px 5px;
        font-size: 9px;
        color: #666;
        text-align: center;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    @media (min-width: 768px) {
        .browser-url {
            border-radius: 3px;
            padding: 2px 6px;
            font-size: 10px;
        }
    }

    .browser-content {
        width: 100%;
        height: 192px;
        background: white;
        position: relative;
        overflow: hidden;
        padding: 2px;
    }

    @media (min-width: 768px) {
        .browser-content {
            height: 208px;
        }
    }

    .screenshot-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top;
    }

    .site-info {
        max-width: 100%;
    }
</style>
